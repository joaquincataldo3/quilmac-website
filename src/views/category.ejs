<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('partials/head') %>

    <link rel="stylesheet" href="/css/category.css">
</head>

<body>

    <%- include ('partials/header') %>

        <main>
            <div class="category-title-container">
                <% dbDeviceTypes.forEach(type => { %>
                    <% if(type.id == idCategory) { %>
                        <h1> Categoría: <%= type.type %> </h1>
                    <% } %>
                   
               <% }) %>
            </div>
            <div class="cards-container">
                <% selectedCategory.forEach(device=> { %>
                    <a href="/productos/<%= device.id %>" class="product-card-anchor">
                        <article class="product-card">
                            <div class="img-card-container">
                                <img class="main-image"
                                    src="/images/devices/<%= device.images[Math.floor(Math.random() * device.images.length)].image %>"
                                    alt="">
                            </div>
                            <div class="info-container">
                                <div class="device-model-container">
                                    <h3 class="device-model">
                                        <%= device.model %>
                                    </h3>
                                </div>
                                <h5 class="available-colors-text">Colores disponibles</h5>
                                <div class="colors-container">
                                    <% device.colors.forEach(color=> { %>
                                        <div class="color" style="background-color:#<%= color.HEX %>;">
                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                            <form class="more-info-form" action="https://quilmac-website-production.up.railway.app/<%= device.id %>">
                                <input class="more-info-input" type="submit" value="Conocer más" />
                            </form>
                        </article>
                    </a>

                    <% }) %>


            </div>
        </main>

        <%- include ('partials/floatsocialmediabtn') %>

        <%- include ('partials/footer') %>

</body>

</html>