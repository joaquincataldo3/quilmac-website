<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('partials/head') %>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap"
            rel="stylesheet">     
        <link rel="stylesheet" href="/css/standard-form.css">
</head>

<body>

    <main>


            <form class="creation-form" id="create-device-form" action="/products/accessory" method="POST"
                enctype="multipart/form-data">

                <h3>Formulario de creaci√≥n de accesorio</h3>

                <div class='label-input-container'>
                    <label class="form-labels" for="accessory_type">Tipo</label>
                    <select class="form-input" name="accessory_type">
                        <optgroup label="Tipo de accesorio">
                            <% accessoryTypes.forEach(accessory=> { %>
                                <option value="<%= accessory.id %>">
                                    <%=accessory.type%>
                                </option>
                                <% }) %>
                        </optgroup>
                    </select>
                    <% if(locals.errors && errors.accessory_type) { %>
                        <p class="error-msg">
                            <%= errors.accessory_type.msg %>
                        </p>
                        <% } %>
                </div>

                <div class="label-input-container">
                    <label class="form-labels" for="model">Accesorio</label>
                    <input class="form-input" type="text" name="accessory"
                        value="<%= locals.oldBody && oldBody.accessory ? oldBody.accessory : "" %> ">
                    <% if(locals.errors && errors.name) { %>
                        <p class="error-msg">
                            <%= errors.name.msg %>
                        </p>
                        <% } %>
                </div>

                <div class="label-input-container">
                    <label class="form-labels" for="iphoneImages">Imagen</label>
                    <input class="form-input" type="file" name="accesory_image">
                    <% if(locals.errors && errors.device_images) {  %> 
                        <p class = "error-msg"> <%= errors.device_images  %>  </p>
                    <% } %> 
                </div>

                <div class="label-input-container">
                    <label class="form-labels" for="iphoneImages">Precio</label>
                    <input class="form-input" type="text" name="price">
                    <% if(locals.errors && errors.device_images) {  %> 
                        <p class = "error-msg"> <%= errors.device_images  %>  </p>
                    <% } %> 
                </div>


                <button class="form-device-btn" type="submit">Crear</button>

            </form>

    </main>

</body>

</html>